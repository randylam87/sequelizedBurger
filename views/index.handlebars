<div class='col-sm-4 col-sm-offset-4'>
    {{#each burgers}}
    {{#unless this.devoured}}
        <h3>
            <ul class="list-unstyled">
                <li class='not-devoured'>
                     {{this.id}}. {{this.burgerName}} 
                    <form action='/{{this.id}}?_method=PUT' method='POST'>
                        <input class='devouredBy' type='text' value='' name='devouredBy' placeholder='Customer' required>
                        <button type='input' class='btn btn-xs btn-danger text-center' id={{this.id}}>Devour it!</button>
                    </form>
                </li>
            </ul>
    </h3>
    {{/unless}}
    {{/each}}
</div>
<div class='col-sm-4'>
    {{#each burgers}}
    {{#if this.devoured}}
        <h3>
            <ul class="list-unstyled">
                <li class='devoured'> {{this.id}}. {{this.burgerName}} (Eaten by {{this.devouredBy}})</li>
            </ul>
        </h3>
    {{/if}}
    {{/each}}
</div>
